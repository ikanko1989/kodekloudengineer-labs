[root@stapp03 tmp]# cp sample.txt /opt/devops/
[root@stapp03 tmp]# cd /opt/devops/
[root@stapp03 devops]# ls
sample.txt

[root@stapp03 devops]# docker exec -it c66bda7c1d80 /bin/bash
root@c66bda7c1d80:/# cd /tmp/
root@c66bda7c1d80:/tmp# ls
sample.txt

